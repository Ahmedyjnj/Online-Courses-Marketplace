<!-- SEARCH SECTION -->
<section class="container mb-5">
    <form asp-action="Index" method="get" class="input-group shadow-sm rounded-pill overflow-hidden">
        <input type="text" name="search" class="form-control px-4 py-2 border-0" placeholder="Search courses...">
        <button class="btn btn-info text-white px-4" type="submit">
            <i class="bi bi-search"></i> Search
        </button>
    </form>
</section>

<!-- COURSES DISPLAY -->
<section class="container mb-5">
    <h2 class="text-center text-light mb-4">Available Courses</h2>
    <div class="row g-4">
        @if(Model?.Courses is not null){
            @foreach (var course in Model.Courses)
            {
                <div class="col-sm-6 col-lg-4">
                    <div class="card h-100 shadow-sm border-0 animate__animated animate__fadeInUp">
                        <img src="@course.PhotoUrl" class="card-img-top" alt="@course.Title" style="height: 200px; object-fit: cover;">

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-info">@course.Title</h5>
                            <p class="card-subtitle mb-2 text-muted">@course.Category</p>
                            <p class="card-text flex-grow-1">@course.Description</p>

                            <!-- ✅ Show price -->
                            <p class="fw-bold text-success">Price: @course.Price EGP</p>

                            <!-- ✅ Payment form -->
                           
                                <a href="@Url.Action("StartPayment", "Payment", new { id = course.Id })" class="btn btn-outline-info mt-3">
                                <button type="submit" class="btn btn-success w-100">💳 Pay Now</button>

                                </a>
                                
                            
                            <a href="@Url.Action("Details", "Course", new { id = course.Id })" class="btn btn-outline-info mt-3">View Details</a>
                        </div>

                        @if (course.Instructor != null)
                        {
                            <div class="card-footer d-flex align-items-center bg-light">
                                <img src="@course.Instructor.PhotoUrl" alt="@course.Instructor.Name" class="rounded-circle me-2" style="width: 40px; height: 40px; object-fit: cover;">
                                <span class="text-muted small">By @course.Instructor.Name</span>
                            </div>
                        }
                    </div>
                </div>
            }

        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info text-center">@ViewData["CourseState"]</div>
            </div>
        }
        
    </div>
</section>


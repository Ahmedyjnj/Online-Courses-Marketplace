@model SignInViewModel

@{
    ViewData["Title"] = "Login";
}

<link href="~/css/LogIn.css" rel="stylesheet" />

<div class="svg-bg">
    <svg width="100%" height="100%" viewBox="0 0 800 600" fill="none" xmlns="http://www.w3.org/2000/svg" style="position:absolute;top:0;left:0;">
        <circle class="circle-1" cx="180" cy="160" r="120" fill="#1e40af" />
        <circle class="circle-2" cx="600" cy="120" r="90" fill="#3b0764" />
        <circle class="circle-3" cx="200" cy="500" r="80" fill="#047857" />
        <circle class="circle-4" cx="700" cy="400" r="110" fill="#facc15" />
    </svg>
</div>
<div class="svg-gradient"></div>

<div class="container-fluid min-vh-100 d-flex align-items-center justify-content-center position-relative" style="z-index:2;">
    <div class="card p-4 p-md-5 signup-fade-in w-100 text-white" style="max-width: 420px; background: rgba(0, 0, 0, 0.8);">
        <h2 class="text-center mb-4 fw-bold text-light">Welcome Back</h2>
        <form asp-action="Login" method="post" class="mt-2">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control bg-dark text-white border-secondary" placeholder="Email" />
                <label asp-for="Email" class="text-white-50"></label>
                <span asp-validation-for="Email" class="invalid-feedback d-block"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Password" class="form-control bg-dark text-white border-secondary" type="password" placeholder="Password" />
                <label asp-for="Password" class="text-white-50"></label>
                <span asp-validation-for="Password" class="invalid-feedback d-block"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 mt-2 py-2 fs-5">Login</button>
        </form>
        <a asp-action="SignUp" class="signup-link">Don't have an account? Sign up</a>
    </div>
</div>

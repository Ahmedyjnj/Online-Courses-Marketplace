@model CourseContentListViewModel

@{
    ViewData["Title"] = "Course Contents";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Course Contents</h2>
        <a href="@Url.Action("AddVideo", "Content" ,new{courseId=Model.CourseId})" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add New Content
        </a>
    </div>

    @if (!Model.Contents.Any())
    {
        <div class="alert alert-info">No content found for this course.</div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 g-4">
            @foreach (var item in Model.Contents)
            {
                <div class="col">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="card-title">@item.VideoDto.Title</h5>

                            <div class="video-wrapper position-relative mb-3 rounded overflow-hidden" style="height: 200px;">
                                

                                <video class="video-player w-100 h-100 rounded" controls style="z-index: 2; position: relative; object-fit: cover;">
                                    <source src="@Url.Content(item.VideoDto.Url)" type="video/mp4" />
                                    Your browser does not support the video tag.
                                </video>
                            </div>

                            <p><strong>Alt Text:</strong> @item.ImageDto.AltText</p>

                            <div class="d-flex justify-content-between mt-3">
                                <a href="@Url.Action("UpdateVideo", "Content", new { contentId = item.VideoDto.Id })" class="btn btn-primary">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a href="@Url.Action("DeleteVideo", "Content", new { contentId = item.VideoDto.Id })" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this content?');">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>



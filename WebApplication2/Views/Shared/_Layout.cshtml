@using System.Security.Claims


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LearnSphere</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication2.styles.css" asp-append-version="true" />

</head>
<body style="padding-top: 70px;">
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">LearnSphere</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (SignInManager.IsSignedIn(User))
                        {

                                var userType = User.FindFirst("UserType")?.Value;
                                var forignId = User.FindFirst("ForignId")?.Value;
                            

                           
                                if (userType == "Student")
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="Student" asp-action="Profile" asp-route-id="@forignId">MyProfile</a>
                                   

                                    </li>
                                }
                                else if (userType == "Instructor")
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="Instructor" asp-action="Profile" asp-route-id="@forignId">MyProfile</a>
                                    </li>
                                }
                            
                        }
                        <!-- Add more nav items here as needed -->
                    </ul>
                    <ul class="navbar-nav ms-3 mb-2 mb-lg-0">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {


                            var name = User.FindFirst("DisplayName")?.Value;
                            var photo = User.FindFirst("PhotoUrl")?.Value;

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                   
                                    <img src="@(photo ?? Url.Content("~/Content/Images/default-user.png"))" alt="..." class="rounded-circle me-2" style="width:32px; height:32px; object-fit:cover;">
                                    <span>@name </span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout">Sign Out</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">Log In</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>
</body>

 @model CourseCreateDto

@{
    ViewData["Title"] = "EditCourse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/AddCourse.css" />

<div class="add-course-container">
    <div class="add-course-card">
        <h1><i class="bi bi-plus-circle"></i> Edit Course</h1>
        <h4>Course Details</h4>
        <form asp-action="Edit" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <div class="form-section">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" placeholder="Enter course title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-section">
                <label asp-for="Photofile" class="form-label">Upload Course Photo</label>
                <input asp-for="Photofile" type="file" class="form-control" />
                <span asp-validation-for="Photofile" class="text-danger small"></span>
            </div>
            <div class="form-section">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Describe your course"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-section">
                <label asp-for="Category" class="form-label"></label>
                <input asp-for="Category" class="form-control" placeholder="e.g. Programming, Design" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-section">
                <label asp-for="StartDate" class="form-label"></label>
                <input asp-for="StartDate" class="form-control" type="date" readonly />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-section">
                <label asp-for="EndDate" class="form-label"></label>
                <input asp-for="EndDate" class="form-control" type="date" readonly/>
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <input asp-for="PhotoUrl" class="form-control" type="hidden" />
            <input asp-for="InstructorId" class="form-control" type="hidden" />
            <input asp-for="Id" class="form-control" type="hidden" />


            <div class="form-section text-center">
                <button type="submit" class="btn btn-success px-4"><i class="bi bi-save"></i> Save Course</button>
            </div>
        </form>
    </div>
    <div class="text-center">
        <a asp-action="Profile" class="back-link"><i class="bi bi-arrow-left"></i> Back to Profile</a>
    </div>
</div>

